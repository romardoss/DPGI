<Window x:Class="lab2.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="Window3" Height="250" Width="500">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="Left" Width="200">TextBox</TextBox>
        <TextBox DockPanel.Dock="Right" Width="200">TextBox</TextBox>
        <Button Margin="10" Height="30" Width="80" VerticalAlignment="Bottom" Click="Button_Click">Button</Button>
    </DockPanel>
</Window>
